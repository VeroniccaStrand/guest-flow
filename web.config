<configuration>
  <system.webServer>
    <handlers>
      <!-- Hanterar Node.js backend -->
      <add name="iisnode" path="backend/app.js" verb="*" modules="iisnode"/>
    </handlers>
    <rewrite>
      <rules>
        <!-- Regel för att omdirigera API-anrop till Node.js app -->
        <rule name="API">
          <match url="^api/.*" />
          <action type="Rewrite" url="backend/app.js"/>
        </rule>
        <!-- Regel för att hantera statiska filer från Vite build -->
        <rule name="StaticContent">
          <match url="^(?!api/).*" />
          <action type="Rewrite" url="client/{R:0}" />
        </rule>
      </rules>
    </rewrite>
    <staticContent>
      <!-- Cacheinställningar eller MIME-typer för statiska filer kan definieras här -->
    </staticContent>
  </system.webServer>
</configuration>